[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f

[push]
    default = current
    autoSetupRemote = true

[pull]
    rebase = true

[rerere]
    # Remember conflict resolutions and auto-apply them
    enabled = true
    autoUpdate = true

[rebase]
    # Auto-squash fixup! and squash! commits
    autoSquash = true
    # Stash changes before rebase, apply after
    autoStash = true
    # Show stat of what changed upstream
    stat = true

[core]
    editor = nvim
    excludesfile = ~/.gitignore_global
    compression = 0
    untrackedCache = true
    # Pager: uses less with colors, works everywhere
    pager = less -RFX
    # Note: fsmonitor can cause issues on some systems, enable if needed
    # fsmonitor = true

[merge]
    ff = only
    conflictstyle = diff3

[status]
    showUntrackedFiles = all

[diff]
    tool = vimdiff
    colorMoved = default

[difftool]
    prompt = false

[difftool "vimdiff"]
    cmd = nvim -d $LOCAL $REMOTE

; [commit]
;     gpgsign = true

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = 227
    frag = magenta bold
    old = red bold
    new = green bold
    commit = 227 bold
    whitespace = red reverse

[color "status"]
    added = green
    changed = yellow
    untracked = red

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[alias]
    patch = !git --no-pager diff --no-color
    difff = !git --no-pager diff
    prune = fetch --prune
    stash-all = stash save --include-untracked

[gpg]
    program = gpg2

[include]
    path = .gitconfig_local

[user]
	email = harsha.ivaturi@gmail.com
    name = Harsha Ivaturi
